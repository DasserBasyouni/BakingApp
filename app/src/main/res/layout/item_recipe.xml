<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp8"
    android:layout_marginEnd="@dimen/dp4"
    android:layout_marginStart="@dimen/dp4"
    android:layout_marginTop="@dimen/dp8"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/dp12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_random_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/random_image_design"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/background_2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/random_image_design"
            android:scaleType="fitCenter"
            android:src="@drawable/gradient_background"
            app:layout_constraintBottom_toBottomOf="@id/imageView_random_design"
            app:layout_constraintLeft_toLeftOf="@id/imageView_random_design"
            app:layout_constraintRight_toRightOf="@id/imageView_random_design"
            app:layout_constraintTop_toTopOf="@id/imageView_random_design" />

        <TextView
            android:id="@+id/textView_recipe_serving"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="@id/imageView_random_design"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintLeft_toLeftOf="@id/imageView_random_design"
            app:layout_constraintRight_toRightOf="@id/imageView_random_design"
            app:layout_constraintTop_toTopOf="@id/imageView_random_design"
            app:layout_constraintVertical_bias="0.87"
            tools:text="servings 8" />

        <TextView
            android:id="@+id/textView_recipe_name"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="@id/imageView_random_design"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintLeft_toLeftOf="@id/imageView_random_design"
            app:layout_constraintRight_toRightOf="@id/imageView_random_design"
            app:layout_constraintTop_toTopOf="@id/imageView_random_design"
            app:layout_constraintVertical_bias="0.87"
            tools:text="Nutella Pie" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>